[Unit]
Description=RClone
AssertPathIsDirectory=/mnt/rclone
Wants=network-online.target
After=network-online.target
 
[Service]
Type=simple
Environment=RCLONE_CONFIG=/root/.config/rclone/rclone.conf

ExecStart=/usr/bin/rclone mount content: /mnt/rclone --cache-dir /var/cache/rclone --vfs-cache-max-age 25h0m0s --vfs-cache-mode full --vfs-cache-poll-interval 55m0s --vfs-cache-max-size 5G --allow-other

ExecStop=/usr/bin/fusermount -u /mnt/rclone
Restart=always
RestartSec=4
 
[Install]
WantedBy=default.target
